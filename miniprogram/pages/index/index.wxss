/* pages/index/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }
  
  .welcome {
    text-align: center;
    font-size: 20px;
    margin-bottom: 20px;
  }

  .goods {
    text-align: left; /* 文本左对齐 */
    font-size: 20px;
    margin-bottom: 20px;
  }
  
  .carousel {
    width: 100%;
    height: 300px;
    margin-bottom: 20px;
  }
  
  .carousel-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .carousel-title {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    padding: 10px;
    text-align: center;
  }
 
  .nav-button {
    width: 100%;
    background-color: #008000; /* 翠绿色 */
    color: white; /* 按钮文字颜色设置为白色，以便与翠绿色背景形成对比 */
  }
  