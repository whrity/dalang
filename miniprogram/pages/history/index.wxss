.container {
    padding: 20px;
}

.record-item {
    display: flex;
    align-items: center;
    margin-bottom: 50px;
}
  
.image-container {
    width: 120px; 
    height: 100px; 
    overflow: hidden;
    position: relative;
}
  
.image-container image {
    width: 100%;
    height: 100%;
    object-fit: cover; 
}
  
.info {
    flex: 1;
	margin-top: 5px;
}
  
.delete-btn {
    width: 80px;
    height: 30px;
    margin-top: 0px;
    margin-left: 30px;
    margin-right: 30px; 
    margin-bottom: 30px;
    background-color: #ff0000;
    color: #fff;
    border: none;
    border-radius: 4px;
    text-align: center;
    line-height: 15px;
    cursor: pointer;
    font-size: 10px;
}
  